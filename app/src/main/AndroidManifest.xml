<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.famazi.snake">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.famazi.snake.MainMenu"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.famazi.snake.ClassicSnake"
            android:label="@string/title_activity_classic_snake"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.famazi.snake.NoWallsSnake"
            android:label="@string/title_activity_no_walls_snake"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.famazi.snake.BombSnake"
            android:label="@string/title_activity_bomb_snake"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.famazi.snake.Settings"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.famazi.snake.ClassicScore"
            android:label="@string/title_activity_classic_score"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.famazi.snake.NoWallsScore"
            android:label="@string/title_activity_no_walls_score"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.famazi.snake.BombScore"
            android:label="@string/title_activity_bomb_score"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
